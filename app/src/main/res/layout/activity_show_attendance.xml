<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.prince.attendancetracker.ShowAttendance">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        android:layout_marginBottom="16dp"
        android:id="@+id/ToolBarAtUpdate">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="Update Attendance"
            android:paddingTop="8dp"
            android:textStyle="normal"
            android:textSize="22sp"
            android:id="@+id/toolBarTextAtShowAtt"
            android:fontFamily="sans-serif"
            android:textAllCaps="false" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViewAtShowAttendance"/>

</LinearLayout>
