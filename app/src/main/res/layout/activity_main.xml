<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.prince.attendancetracker.MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:id="@+id/useless5">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_navigate_before"
            android:scaleType="centerInside"
            android:layout_marginLeft="16dp"
            android:id="@+id/backButtonAtActivityMain"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="Login"
            android:textColor="#cf3c3c"
            android:textSize="22sp"
            android:layout_marginRight="22dp"
            android:paddingTop="12dp"
            android:fontFamily="sans-serif-smallcaps"/>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#cf3c3c"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_below="@id/useless5"
        android:layout_marginTop="22dp"
        android:src="@drawable/icon"
        android:scaleType="fitCenter"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/backeditext"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:hint="Email"
        android:paddingLeft="22dp"
        android:textColorHint="#9e9e9e"
        android:cursorVisible="false"
        android:id="@+id/userNameAtActivityMain"
        android:layout_above="@id/passwordAtActivityMain"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/backeditext"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:hint="Password"
        android:paddingLeft="22dp"
        android:textColorHint="#9e9e9e"
        android:cursorVisible="false"
        android:id="@+id/passwordAtActivityMain"
        android:layout_above="@id/loginButtonAtActivityMain"
        android:layout_marginBottom="32dp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:src="@drawable/red"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:id="@+id/imageAtStartingPage" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backcolor"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/signUpButtonAtActivityMain"
        android:text="Login"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:elevation="16dp"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/loginButtonAtActivityMain"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_above="@id/imageAtStartingPage"
        android:id="@+id/signUpButtonAtActivityMain"
        android:text="Not a member ? Create one"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="14sp"
        android:fontFamily="serif-monospace"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
