<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.prince.attendancetracker.AddPaperSection">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/paperNameLayoutAtAddPaperSection">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Paper Name"
            android:id="@+id/paperNameEditTextAtAddPaperSection"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paperNameLayoutAtAddPaperSection"
        android:id="@+id/paperCodeLayoutAtAddPaperSection">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Paper Code"
            android:id="@+id/paperCodeEditTextAtAddPaperSection"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paperCodeLayoutAtAddPaperSection"
        android:id="@+id/paperSemLayoutAtAddPaperSection">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Semester"
            android:id="@+id/semEditTextAtAddPaperSection"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paperSemLayoutAtAddPaperSection"
        android:id="@+id/paperCreditLayoutAtAddPaperSection">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="branch"
            android:id="@+id/paperCreditEditTextAtAddPaperSection"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/paperCreditLayoutAtAddPaperSection"
        android:text="Add"
        android:id="@+id/addPaperButtonAtAdminSection"/>

</RelativeLayout>
