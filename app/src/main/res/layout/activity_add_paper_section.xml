<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.prince.attendancetracker.AddPaperSection"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_navigate_before_white_24dp"
            android:scaleType="centerInside"
            android:layout_marginLeft="16dp"
            android:id="@+id/backButtonAtActivityMain"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="App Paper"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginRight="22dp"
            android:paddingTop="12dp"
            android:fontFamily="sans-serif-smallcaps"/>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_above="@id/linearLayout1AtSignUpPage"
        android:layout_marginBottom="64dp"
        android:src="@drawable/iconwhite"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1AtSignUpPage"
        android:orientation="horizontal"
        android:layout_above="@+id/linearLayout2AtSignUpPage"
        android:paddingRight="22dp"
        android:paddingLeft="22dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_perm_identity_white_24dp"
            android:padding="8dp"
            android:layout_marginRight="16dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/white"
            android:theme="@style/TextLabel">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Paper Name"
                android:textColor="@color/white"
                android:id="@+id/paperNameEditTextAtAddPaperSection"
                android:backgroundTint="@color/white"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/addPaperButtonAtAdminSection"
        android:id="@+id/linearLayout2AtSignUpPage"
        android:orientation="horizontal"
        android:paddingRight="22dp"
        android:paddingLeft="22dp"
        android:layout_marginBottom="32dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_usb_white_24dp"
            android:padding="8dp"
            android:layout_marginRight="16dp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/white"
            android:foregroundTint="@color/white"
            android:theme="@style/TextLabel">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Branch Code"
                android:textColor="@color/white"
                android:textColorHint="#9e9e9e"
                android:id="@+id/semEditTextAtAddPaperSection"
                android:backgroundTint="@color/white"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageAtAddPaperSection"
        android:text="Add Paper"
        android:id="@+id/addPaperButtonAtAdminSection"
        android:layout_marginBottom="64dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="@drawable/backcolorwhite"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-condensed"
        android:textSize="22sp"
        android:textAllCaps="true"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:src="@drawable/white"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:id="@+id/imageAtAddPaperSection" />


</RelativeLayout>
