<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.prince.attendancetracker.TeacherLogin"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_navigate_before"
            android:scaleType="centerInside"
            android:layout_marginLeft="16dp"
            android:id="@+id/backButtonAtTeacherLogin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="Teacher Login"
            android:textColor="#cf3c3c"
            android:textSize="16sp"
            android:layout_marginRight="12dp"
            android:paddingTop="12dp"
            android:fontFamily="sans-serif-smallcaps"/>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#cf3c3c"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_above="@id/userNameAtTeacherLogin"
        android:layout_marginBottom="84dp"
        android:src="@drawable/icon"
        android:scaleType="fitCenter"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@drawable/backeditext"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:hint="Enter your 6 Digit Code"
        android:paddingLeft="22dp"
        android:textColorHint="#9e9e9e"
        android:cursorVisible="false"
        android:id="@+id/userNameAtTeacherLogin"
        android:layout_above="@id/loginButtonAtTeacherLogin"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="Login"
        android:layout_above="@id/textViewUseless"
        android:id="@+id/loginButtonAtTeacherLogin"
        android:textAllCaps="true"
        android:background="@drawable/backcolor"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed"
        android:textSize="22sp"
        android:elevation="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="Contact your Department in case of any problem"
        android:layout_above="@id/imageAtTeacherLogin"
        android:id="@+id/textViewUseless"
        android:layout_marginBottom="32dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:singleLine="true"
        android:textAllCaps="false"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:src="@drawable/red"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:id="@+id/imageAtTeacherLogin" />

</RelativeLayout>
