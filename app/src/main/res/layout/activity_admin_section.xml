<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.prince.attendancetracker.AdminSection">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Teacher"
        android:id="@+id/addTeacherButtonAtAdminSection" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assign Teacher"
        android:id="@+id/assignClassButtonAtAdminSection"
        android:layout_below="@id/addTeacherButtonAtAdminSection"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Paper"
        android:id="@+id/addPaperButtonAtAdminSection"
        android:layout_below="@id/assignClassButtonAtAdminSection"/>

</RelativeLayout>
