<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.prince.attendancetracker.AdminNotification"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_navigate_before_white_24dp"
            android:scaleType="centerInside"
            android:layout_marginLeft="16dp"
            android:id="@+id/backButtonAtActivityMain"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="Notification"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:layout_marginRight="22dp"
            android:paddingTop="12dp"
            android:fontFamily="sans-serif-smallcaps"/>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/semSpinnerAtAdminNotification"
        android:layout_above="@id/notificationAtAdminNotification"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:paddingLeft="44dp"
        android:backgroundTint="@color/white"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:background="@drawable/backeditext"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:hint="Enter your Message to send ..."
        android:paddingLeft="22dp"
        android:textColorHint="#9e9e9e"
        android:cursorVisible="false"
        android:id="@+id/notificationAtAdminNotification"
        android:layout_above="@id/sendButtonAtAdminNotification"
        android:ellipsize="start"
        android:layout_marginBottom="32dp"
        android:textAlignment="textStart"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_alignParentRight="true"
        android:layout_above="@id/imageAtAdminNotification"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="32dp"
        android:id="@+id/sendButtonAtAdminNotification"
        android:background="@drawable/ic_send"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:src="@drawable/white"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:id="@+id/imageAtAdminNotification" />

</RelativeLayout>
