<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.prince.attendancetracker.AssignTeacherSection"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_navigate_before_white_24dp"
            android:scaleType="centerInside"
            android:layout_marginLeft="16dp"
            android:id="@+id/backButtonAtActivityMain"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="Assign Teacher"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginRight="12dp"
            android:paddingTop="12dp"
            android:fontFamily="sans-serif-smallcaps"/>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teacherNameSpinnerAtAssignTeacherSection"
        android:layout_above="@id/semSpinnerAtAssignTeacherSection"
        android:layout_marginBottom="44dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:paddingLeft="44dp"
        android:backgroundTint="@color/white"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/semSpinnerAtAssignTeacherSection"
        android:layout_above="@id/paperSpinnerAtAssignTeacherSection"
        android:layout_marginBottom="44dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:paddingLeft="44dp"
        android:backgroundTint="@color/white"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/paperSpinnerAtAssignTeacherSection"
        android:layout_above="@id/assignTeacherButtonAtAssignTeacher"
        android:layout_marginBottom="74dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:paddingLeft="44dp"
        android:backgroundTint="@color/white"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assign"
        android:layout_above="@id/imageAtAssignTeacher"
        android:id="@+id/assignTeacherButtonAtAssignTeacher"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:background="@drawable/backcolorwhite"
        android:textColor="@color/colorPrimary"
        android:fontFamily="sans-serif-condensed"
        android:textSize="22sp"
        android:textAllCaps="true"
        android:textAlignment="center"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:src="@drawable/white"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:id="@+id/imageAtAssignTeacher" />
</RelativeLayout>
