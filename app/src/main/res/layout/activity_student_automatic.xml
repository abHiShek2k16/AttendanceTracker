<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.prince.attendancetracker.StudentAutomatic"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_navigate_before"
            android:scaleType="centerInside"
            android:layout_marginLeft="16dp"
            android:id="@+id/backButtonAtActivityMain"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="textEnd"
            android:text="Attendance"
            android:textColor="#cf3c3c"
            android:textSize="22sp"
            android:layout_marginRight="22dp"
            android:paddingTop="12dp"
            android:fontFamily="sans-serif-smallcaps"/>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="#cf3c3c"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </LinearLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:hint="Enter 6 digit code"
        android:id="@+id/editTextCodeAtStudentAutomatic"
        android:background="@drawable/backeditext"
        android:layout_marginRight="22dp"
        android:layout_marginLeft="22dp"
        android:paddingLeft="22dp"
        android:textColorHint="#9e9e9e"
        android:cursorVisible="false"
        android:layout_above="@id/passwordAtActivityMain"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/imageAtStudentAutomatic"
        android:id="@+id/donButtonAtStudentAutomatic"
        android:text="Done"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="22sp"
        android:elevation="16dp"
        android:background="@drawable/backcolor"
        android:layout_marginBottom="54dp"
        android:fontFamily="sans-serif-condensed"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:src="@drawable/red"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:id="@+id/imageAtStudentAutomatic" />

</RelativeLayout>
