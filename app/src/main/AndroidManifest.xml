<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.prince.attendancetracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.nobar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminSection"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".AddTeacherSection"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".AddPaperSection"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".AssignTeacherSection"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".TeacherLogin"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".TeacherHomePage"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".UpdateAttendance"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".SignUpPage"
            android:theme="@style/AppTheme.nobar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".StudentHomePage"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".ShowAttendance"
            android:theme="@style/AppTheme.nobar" />
        <activity android:name=".AdminPortal"></activity>
    </application>

</manifest>